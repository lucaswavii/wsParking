<!DOCTYPE html>
<html lang="en">

<head>
   <% include /templates/head %>
   <script type="text/javascript" src="jquery.dataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#grdCliente').dataTable( {
                "language": {
                    "url": 'https://cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json'
                }
            } );
        } );
    </script>
</head>

<body onload="startTime()">
    <div id="wrapper">
        <% include /templates/header %>  
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Cadastro de Clientes</h1>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Listagem de Clientes
                                </div>
                                <% var output = sessao.permissao.filter(function(value){ return value.modulo == 2;}) %>
                                        
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <table width="100%" class="table table-striped table-bordered table-hover" id="grdCliente">
                                        <thead>
                                            <tr>
                                                <th>Cpf / Cnpj</th>
                                                <th>Nome</th>
                                                <th>Atendente</th>
                                                <th>Ações</th>                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i = 0; i < clientes.length; ++i) { %>
                                                <tr class="odd gradeX">
                                                    <td><%= clientes[i].cpfcnpj %></td>
                                                    <td><%= clientes[i].nome %></td>
                                                    <td><%= clientes[i].atendente %></td>
                                                    <td class="center">                                                            
                                                       
                                                        <a class="btn btn-info <%= output != undefined && output.length > 0 && output[0].alterar == 'S' ? '' :'disabled'  %>" href="/clienteEditar/<%= clientes[i].id %>">
                                                            <i class="glyphicon glyphicon-edit icon-white"></i>
                                                            Editar
                                                        </a>
                                                        <% if( output != undefined && output.length > 0 && output[0].excluir == 'S') { %>
                                                        <button class="btn btn-danger" data-toggle="modal" data-target="#<%= clientes[i].id %>">
                                                            <i class="glyphicon glyphicon-trash icon-white"></i>
                                                            Deletar
                                                        </button>
                                                        <% } else { %>
                                                        <button class="btn btn-danger disabled">
                                                            <i class="glyphicon glyphicon-trash icon-white"></i>
                                                            Deletar
                                                        </button>
                                                                
                                                        <% } %>
                                                            
                                                        <!-- Modal 1 -->
                                                        <div class="modal fade" id="<%= clientes[i].id %>" tabindex="-1" role="dialog" aria-labelledby="<%= clientes[i].id %>Label" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                                        <h4 class="modal-title" id="myModal1Label">Exclusão de Dados</h4>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        Deseja realmente excluir o registro?
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                                                        <a class="btn btn-primary" href="/clienteExcluir/<%=  clientes[i].id   %>">
                                                                            Confirmar
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <!-- /.modal-content -->
                                                            </div>
                                                        <!-- /.modal-dialog -->
                                                        </div>
                                                        <!-- /.modal -->
                                                    </td>
                                                </tr>                                                
                                            <% } %>  
                                        </tbody>
                                    </table>
                                    <a class="btn btn-warning <%= output != undefined && output.length > 0 && output[0].incluir == 'S' ? '' :'disabled'  %>"" href="/clienteNovo">
                                        <i class="glyphicon glyphicon-plus-sign"></i>
                                        Novo
                                    </a>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->     
    </div>
    <% include /templates/footer %>
    
</body>

</html>
