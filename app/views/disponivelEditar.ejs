<!DOCTYPE html>
<html lang="en">

<head>
   <% include /templates/head %>
</head>

<body>
  <div id="wrapper">
  <% include /templates/header %>
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Cadastro de Disponíveis</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Edição de Disponíveis
                        </div>
                        <div class="panel-body">
                        <% if(validacao.length > 0){ %>
                            <div class="panel-body">
                            <% for(var i = 0; i < validacao.length; i++) {%>
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                    <a href="#" class="alert-link">Erro:</a>.<%= validacao[i].msg %>
                                </div>
                            <% } %>
                            </div>
                        <% } %>

                        
                        <form role="form" action="/disponivelSalvar" method="post">
                            <div class="row">
                                    <div class="col-lg-6">
                                    <% if( disponiveis.length > 0 ) { %>
                                    <div class="form-group">
                                        <label>Registro</label>
                                        <input class="form-control disabled" readonly="true" name="id" id="id" placeholder="Registro" value="<%= ( disponiveis.length == 1 ? disponiveis[0].id : "" ) %>">
                                    </div>
                                    <% } %>
                                    <div class="form-group">
                                        <label>Codigo</label>
                                        <input class="form-control" required="true" name="codigo" id="codigo" placeholder="Codigo" value="<%= ( disponiveis.length == 1 ? disponiveis[0].codigo : "" ) %>">
                                    </div>
                                    <div class="form-group">
                                        <label>Banco</label>
                                        <input class="form-control" required="true" name="banco" id="banco" placeholder="Código do Banco(FEBRABAN)" maxlength="10" value="<%= ( disponiveis.length == 1 ? disponiveis[0].banco : "" ) %>">
                                        </div>
                                        <div class="form-group">
                                        <label>Agência</label>
                                        <input class="form-control" required="true" name="agencia" id="agencia" placeholder="Agência" value="<%= ( disponiveis.length == 1 ? disponiveis[0].agencia : "" ) %>">
                                        </div>   
                                        <div class="form-group">
                                        <label>Conta</label>
                                        <input class="form-control" required="true" name="conta" id="conta" placeholder="Conta" value="<%= ( disponiveis.length == 1 ? disponiveis[0].conta : "" ) %>">
                                        </div> 
                                        <% var output = sessao.permissao.filter(function(value){ return value.modulo == 5;}) %>
                                        <% if( output != undefined && output.length > 0 && disponiveis.length == 1 && output[0].alterar == 'S') { %>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">Salvar</button>
                                        <% } else if( output != undefined && output.length > 0 && output[0].incluir == 'S' ) {%>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal2">Salvar</button>
                                        <% } else { %>                                                                             
                                        <button type="button" class="btn btn-primary disabled">Salvar</button>
                                        <% } %>
                                        <button type="reset" class="btn btn-danger" onclick="window.location.href='/disponivel'">Cancelar</button>
                                    </div>
                                        <!-- Modal -->
                                    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModal1Label" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                    <h4 class="modal-title" id="myModal1Label">Salvando os Dados</h4>
                                                </div>
                                                <div class="modal-body">
                                                        Deseja realmente salvar o registro?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                                    <button type="submit" class="btn btn-primary">Confirmar</button>
                                                </div>
                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </div>
      <% include /templates/footer %>
</body>

</html>